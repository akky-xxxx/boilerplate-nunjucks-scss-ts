{% macro dialog(baseClassName, message, cancelText='キャンセル', okText='OK') %}
  <!-- .js-{{ baseClassName }}-wrapper- -->
  <div class="ModalBase js-{{ baseClassName }}-wrapper">
    <div class="ModalBase__contentsWrapper">
      <div class="Dialog">
        <div class="Dialog__body">
          <!-- dialog body -->
          {{ message }}
          <!-- /dialog body -->
        </div>
        <div class="Dialog__footer">
          <ul class="Dialog__buttons">
            <li class="Dialog__buttonWrapper">
              <button class="Button Button--minor js-{{ baseClassName }}-close-cancel">{{ cancelText }}</button>
            </li>
            <li class="Dialog__buttonWrapper"><button class="Button Button--primary js-{{ baseClassName }}-close-ok">{{ okText }}</button></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="ModalBase__background js-{{ baseClassName }}-close-cancel"></div>
  </div>
  <!-- /.js-{{ baseClassName }}-wrapper- -->
{% endmacro %}