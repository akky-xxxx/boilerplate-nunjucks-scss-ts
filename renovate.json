{
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["every friday"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on the first day of the month"
    ]
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "packagePatterns": ["date-fns"],
      "automerge": false
    }
  ]
}
