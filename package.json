{
  "name": "boilerplate-nunjucks-scss-ts",
  "version": "1.0.0",
  "dependencies": {
    "favalid": "^0.9.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "autoprefixer": "^9.7.4",
    "chokidar-cli": "^2.1.0",
    "cpx": "^1.5.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fixpack": "^2.3.1",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "nunjucks-cli": "^1.0.0",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akky-xxxx/boilerplate-nunjucks-scss-ts.git"
  },
  "scripts": {
    "build:common": "run-p  build:common:*",
    "build:common:html": "nunjucks **/*.njk -p ./src/njk -o ./dist -w",
    "build:dev": "webpack",
    "check": "run-s fix lint type-check",
    "clean": "rimraf ./dist",
    "fix": "run-p fix:*",
    "fix:html": "prettier './dist/**/*.html' --write",
    "fix:pack": "fixpack",
    "fix:scss": "stylelint --fix './src/scss/**/*.scss'",
    "fix:ts": "eslint --fix -c ./.eslintrc.json 'src/ts/**/*.ts'",
    "lint": "run-p lint:*",
    "lint:scss": "stylelint './src/scss/**/*.scss'",
    "lint:ts": "eslint -c ./.eslintrc.json 'src/ts/**/*.ts'",
    "serve": "webpack-dev-server",
    "start": "npm-run-all clean -p build:common serve watch",
    "type-check": "tsc",
    "upgrade-interactive": "npm-check --update",
    "watch": "run-p watch:*",
    "watch:html": "chokidar './dist/**/*.html' -c 'npm run fix:html'"
  }
}
