{
  "name": "boilerplate-nunjucks-scss-ts",
  "version": "1.0.0",
  "bugs": {
    "url": "https://gitlab.com/akky-xxxx/boilerplate-nunjucks-scss-ts/issues"
  },
  "devDependencies": {
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "autoprefixer": "^9.5.1",
    "chokidar-cli": "^1.2.2",
    "cpx": "^1.5.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "fibers": "^3.1.1",
    "fixpack": "^2.3.1",
    "fs": "0.0.1-security",
    "mini-css-extract-plugin": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "nunjucks-cli": "^0.5.1",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.3",
    "sass": "^1.19.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.6.0",
    "ts-loader": "^5.3.3",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "homepage": "https://gitlab.com/akky-xxxx/boilerplate-nunjucks-scss-ts#README",
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/akky-xxxx/boilerplate-nunjucks-scss-ts.git"
  },
  "scripts": {
    "build:common": "run-p  build:common:*",
    "build:common:html": "nunjucks **/*.njk -p ./src/njk -o ./dist -w",
    "build:dev": "webpack",
    "check": "run-s fix lint type-check",
    "clean": "rimraf ./dist",
    "fix": "run-p fix:*",
    "fix:html": "prettier './dist/**/*.html' --write",
    "fix:scss": "stylelint --fix './src/scss/**/*.scss'",
    "fix:ts": "eslint --fix -c ./.eslintrc.json 'src/ts/**/*.ts'",
    "fixpack": "fixpack",
    "lint": "run-p lint:*",
    "lint:scss": "stylelint './src/scss/**/*.scss'",
    "lint:ts": "eslint -c ./.eslintrc.json 'src/ts/**/*.ts'",
    "serve": "webpack-dev-server",
    "start": "npm-run-all clean -p build:common serve watch",
    "type-check": "tsc",
    "watch": "run-p watch:*",
    "watch:html": "chokidar './dist/**/*.html' -c 'npm run fix:html'"
  },
  "dependencies": {
    "favalid": "^0.9.0",
    "uuid": "^3.3.2"
  }
}
